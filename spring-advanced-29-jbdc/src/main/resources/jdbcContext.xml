<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans 
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:recursos/jdbc.derby.properties</value>
            </list>
        </property>
    </bean>
    <bean id="dataSource" destroy-method="close" class="org.apache.commons.dbcp.BasicDataSource">
        <property name="driverClassName" value="${jdbc.derby.driver}"/>
        <property name="url" value="${jdbc.derby.url}"/>
        <property name="username" value="${jdbc.derby.nombre}"/>
        <property name="password" value="${jdbc.derby.clave}"/>
    </bean>
    <bean id="personaDao" class="dao.PersonaDaoImpl">
        <property name="dataSource" ref="dataSource"/>
    </bean>
</beans>
